<?xml version="1.0" encoding="UTF-8"?>
<process-spec>
  <process-info>
    <author>OgAstorga</author>
    <date>2018-04-04</date>
    <name>Todos los inputs</name>
    <description>Proceso que pide todos los tipos de entrada y después no hace nada</description>
    <public>true</public>
  </process-info>
  <process>
    <action id="inputs-node" >
      <auth-filter backend="anyone"></auth-filter>
      <form-array>
        <form id="auth-form">
          <input
            type="text"
            label="Nombre"
            name="name"
            required="required"
            placeholder="Jon Snow"
          />

          <input
            label="Fecha de nacimiento"
            type="datetime"
            name="datetime"
            required="required"
          />

          <input
            label="Un secreto"
            type="password"
            name="secret"
            required="required"
          />


          <input
            label="Un secreto"
            type="hidden"
            name="hide"
            required="required"
          />

          <input
            label="Género?"
            type="radio"
            name="gender"
            required="required">
            <options>
              <option value="male">Masculino</option>
              <option value="female">Femenino</option>
            </options>
          </input>

          <input
            label="Marque sus intereses"
            type="checkbox"
            name="interests"
            required="required">
            <options>
              <option value="science">Ciencia</option>
              <option value="sports">Deportes</option>
              <option value="music">Música</option>
              <option value="nature">Naturaleza</option>
              <option value="thecnology">Tecnología</option>
            </options>
          </input>

          <input
            type="select"
            label="Emita su voto"
            name="elections"
            required="required">
            <options>
              <option value="amlo">Andres Manuel López Obrador</option>
              <option value="meade">José Antonio Meade Kuribreña</option>
              <option value="marguarita">Margarita Ester Zavala Gómez del Campo</option>
              <option value="anaya">Ricardo Anaya Cortés</option>
            </options>
          </input>
        </form>
      </form-array>
    </action>
  </process>
</process-spec>
