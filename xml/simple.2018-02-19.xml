<?xml version="1.0" encoding="UTF-8"?>
<process-spec>
  <process-info>
    <author>categulario</author>
    <date>2018-02-19</date>
    <name>Simplest process ever</name>
    <public>true</public>
    <description>A simple process that does nothing</description>
  </process-info>
  <process>
    <node id="start-node" class="simple">
      <node-info>
        <name>Primer paso</name>
        <description>Resolver una tarea</description>
      </node-info>
      <form-array>
        <form id="start-form">
          <input type="text" name="data" required="required" label="Info" />
        </form>
      </form-array>
    </node>

    <node id="mid-node" class="simple">
      <auth-filter backend="hardcoded">
        <param name="identifier" type="ref">user#start-node</param>
        <param name="relation">manager</param>
      </auth-filter>
      <form-array>
        <form id="mid-form">
          <input type="text" name="data" required="required" />
        </form>
      </form-array>
    </node>

    <node id="final-node" class="simple">
    </node>
  </process>
</process-spec>
