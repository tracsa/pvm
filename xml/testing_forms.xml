<process-spec>
  <process-info>
    <author>OgAstorga</author>
    <date>2018-04-04</date>
    <name>Todos los inputs</name>
    <description>Proceso que pide todos los tipos de entrada y después no hace nada</description>
    <public>true</public>
    <start-node>inputs-node</start-node>
  </process-info>
  <process>
    <node id="foo">
      <form-array>
        <form id="text-input">
          <input
            type="text"
            name="ccn"
            label="credit card number"
            regex="[0-9]{16}"
          />
        </form>

        <form id="two-inputs">
          <input
            type="text"
            name="firstname"
          />

          <input
            type="text"
            name="surname"
          />
        </form>

        <form id="select">
          <input
            type="radio"
            name="auth"
            required="required"
            label="Le das chance?">
            <option value="yes">Ándale mijito, ve</option>
            <option value="no">Ni madres</option>
          </input>
        </form>

        <form id="with-helper">
          <input
            type="password"
            name="password"
            helper="10 alfanumeric chars"
          />
        </form>
      </form-array>
    </node>
  </process>
</process-spec>
