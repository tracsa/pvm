<process-spec>
  <process-info>
    <author>categulario</author>
    <date>2018-04-11</date>
    <name>Failing, wrong process</name>
    <public>false</public>
    <description>Created for testing the resistance of the handler against faulty hierarchy providers</description>
  </process-info>
  <process>
    <node id="start-node" class="simple">
      <form-array>
        <form id="form">
          <input type="select" name="choice">
            <option value="noprov">Unexistent provider</option>
          </input>
        </form>
      </form-array>
    </node>

    <node id="noprov" class="end">
      <condition>#form.choice == "noprov"</condition>
      <auth-filter backend="noexist" />
    </node>

    <node id="return" class="end">
      <condition>#form.choice == "return"</condition>
      <auth-filter backend="badreturn">
        <param name="opt">return</param>
      </auth-filter>
    </node>

    <node id="item" class="end">
      <condition>#form.choice == "item"</condition>
      <auth-filter backend="badreturn">
        <param name="opt">item</param>
      </auth-filter>
    </node>
  </process>
</process-spec>
